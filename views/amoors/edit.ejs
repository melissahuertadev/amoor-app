<%- include('../partials/header.ejs', {event: "auth"}) %>

<section class="form-section container-fluid">
  <div class="row addnew-row center-row">
    <div class="col-lg-10 col-md-6 col-sm-9">
      <%- include ('../partials/messages') %>

      <form id="addnew-form" action="/amoors/<%=_id%>?_method=PUT" method="POST">
        <div class="form-group row">
          <input type="name" class="form-control col-lg-5" name="name1" placeholder="Your name" value="<%= typeof name1 != 'undefined' ? name1 : '' %>">
          <input type="name" class="form-control col-lg-5" name="name2" placeholder="Your amoor's name" value="<%= typeof name2 != 'undefined' ? name2 : '' %>">
          <input type="date" class="form-control col-lg-5" name="date" placeholder="Date of celebration" value="<%= typeof date != 'undefined' ? date : '' %>">
          <textarea style="resize:none" class="form-control col-lg-5" rows="2" name="message" placeholder="Message"><%= typeof message !== 'undefined' ? message : '' %></textarea>
        </div>
        <button type="submit" class="btn btn-dark">Save</button>
      </form>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>