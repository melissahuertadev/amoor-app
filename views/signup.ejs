<%- include('partials/header', {event: "non-auth"}) %>

<section class="signup-section container-fluid">
  <div class="row signup-row">
    <div class="col-lg-10 col-md-6 col-sm-9">
      <form id="signup-form" action="/signup" method="POST">
        <div class="form-group row">
          <input type="name" class="form-control col-lg-5" name="username" placeholder="Username">
          <input type="email" class="form-control col-lg-5" name="email" placeholder="E-mail">
          <input type="password" class="form-control col-lg-5" name="password" placeholder="Password">
          <input type="password" class="form-control col-lg-5" name="password-confirmation" placeholder="Confirm password">
        </div>
        <button type="submit" class="btn btn-dark">Sign up</button>
      </form>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
