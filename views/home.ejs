<%- include('partials/home-header', {event: auth})%>

  <section class="home-section container-fluid">
    <div class="row home-row center-row">
      <div class="col-lg-6 home-container">
        <h1 class="home-heading font-amoor">Amoor</h1>
        <a class="home-icon-enter" href="/amoors">
          <i class="fa-solid fa-arrow-right-to-bracket"></i>
        </a>
        <%- include ('partials/messages') %>
      </div>
      
      <% if (auth === "non-auth") {%>
      <div class="col-lg-6 home-container home-btns">
          <a class="btn btn-dark btn-lg" href="/users/signin" role="button">Sign in</a>
          <a class="btn btn-pink btn-lg" href="/users/signup" role="button">Sign up</a>
      </div>
      <% } else {%>
      <div class="col-lg-6 option-msg">You are already logged in, <a href="/amoors"><strong>go back</strong></a> to amoor's wall ;)</div>
      <% } %>
    </div>
  </section>

  <%- include('partials/footer') %>