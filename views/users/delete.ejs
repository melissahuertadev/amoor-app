<%- include('../partials/header.ejs', {event: "auth" }) %>

    <section class="form-section container-fluid">
        <div class="row  center-row">
            <div class="col-lg-10 col-md-6 col-sm-9">
                <%- include ('../partials/messages') %>
                    <form id="signup-form" action="/users/<%=_id%>?_method=DELETE" method="POST">
                        <div class="form-group row">
                            <div class="delete-msg">
                                You will no longer have access to this account and <strong>your amoors</strong> will be
                                deleted forever.
                                </br></br> Are you sure you want to delete your account?
                            </div>

                            <input type="name" class="form-control col-lg-5" name="email" placeholder="Username or e-mail">
                        </div>
                        <button type="submit" class="btn btn-dark">I'm sure</button>
                    </form>

            </div>
        </div>
    </section>

<%- include('../partials/footer') %>