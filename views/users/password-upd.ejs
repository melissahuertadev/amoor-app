<%- include('../partials/header.ejs', {event: "non-auth" }) %>

  <section class="form-section container-fluid">
    <div class="row center-row">
      <div class="col-lg-10 col-md-6 col-sm-9">
        <%- include ('../partials/messages') %>
          <form id="upd-password-form" action="/users/<%= id %>/update-password?_method=PUT" method="POST" autocomplete="off">
            <div class="form-group row">
              <input id="upd-password1" type="password" class="form-control col-lg-5" name="password"
                placeholder="New Password" value="<%= typeof password != 'undefined' ? password : '' %>"
                autocomplete="off">
              <input id="upd-password2" type="password" class="form-control col-lg-5" name="passwordConfirmation"
                placeholder="Confirm New Password" value="<%= typeof passwordConfirmation != 'undefined' ? passwordConfirmation : '' %>" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
      </div>
    </div>
  </section>

  <%- include('../partials/footer.ejs') %>